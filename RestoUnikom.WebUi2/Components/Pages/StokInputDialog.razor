@using MudBlazor
@using Microsoft.AspNetCore.Components
@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public int Value { get; set; }
    private int stokBaru;
    protected override void OnInitialized()
    {
        stokBaru = Value;
    }
    void Submit() => MudDialog.Close(DialogResult.Ok(stokBaru));
    void Cancel() => MudDialog.Cancel();
}
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Edit Stok Menu</MudText>
        <MudNumericField @bind-Value="stokBaru" Label="Stok Baru" Min="0" Immediate="true" Class="mb-4" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">Batal</MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary">Simpan</MudButton>
    </DialogActions>
</MudDialog>
